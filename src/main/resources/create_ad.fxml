        <CheckBox fx:id="furnitureBox" layoutX="487.0" layoutY="217.0" mnemonicParsing="false" onAction="#handleCheckBoxAction" prefHeight="17.0" prefWidth="97.0" text="Furniture" />
      <HBox prefHeight="100.0" prefWidth="200.0" />
      <TextField fx:id="priceField" layoutX="156.0" layoutY="251.0" prefHeight="28.0" prefWidth="134.0" promptText="*Price" style="-fx-background-color: transparent; -fx-border-color: #2F4F4F; -fx-border-width: 0px 0px 2px 0px;">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="descriptionField" layoutX="156.0" layoutY="284.0" prefHeight="28.0" prefWidth="487.0" promptText="*Description" style="-fx-background-color: transparent; -fx-border-color: #2F4F4F; -fx-border-width: 0px 0px 2px 0px;">
