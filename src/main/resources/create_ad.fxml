                <Font name="Times New Roman" size="9.0" />
            </font>
        </Button>
        <Button layoutX="14.0" layoutY="389.0" onAction="#goBackToHomepage" prefHeight="29.0" prefWidth="85.0" style="-fx-background-color: transparent; -fx-border-width: 2px 2px 2px 2px; -fx-border-color: #2F4F4F;" styleClass="register-button" stylesheets="@buttonstyle.css" text="Back" textAlignment="CENTER" textFill="DARKSLATEGRAY" textOverrun="CLIP">
            <font>
                <Font name="Times New Roman" size="16.0" />
            </font>
        </Button>
        <HBox prefHeight="100.0" prefWidth="200.0" />
        <CheckBox fx:id="appliancesBox" layoutX="169.0" layoutY="217.0" mnemonicParsing="false" onAction="#handleCheckBoxAction" prefHeight="17.0" prefWidth="97.0" text="Appliances" />
        <CheckBox fx:id="clothesBox" layoutX="288.0" layoutY="217.0" mnemonicParsing="false" onAction="#handleCheckBoxAction" prefHeight="17.0" prefWidth="85.0" text="Clothes" />
