            <font>
                <Font name="Calibri Bold" size="13.0" />
            </font>
        </TextField>
        <Pane layoutY="85.0" prefHeight="12.0" prefWidth="661.0" style="-fx-background-color: #2F4F4F;" />
        <ImageView fx:id="photoPath" fitHeight="115.0" fitWidth="119.0" layoutX="14.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@AdPhoto_logo.png" />
            </image>
        </ImageView>
