                        <Font name="Times New Roman Bold" size="18.0" />
                    </font>
                    <effect>
                        <Blend />
                    </effect>
                </TextField>
                <ImageView fitHeight="134.0" fitWidth="135.0" layoutX="6.0" layoutY="-24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
        <HBox alignment="TOP_RIGHT" layoutX="450.0" prefHeight="35.0" prefWidth="200.0">
            <children>
                <Button fx:id="minimizeField" contentDisplay="TOP" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="27.0" prefWidth="24.0" style="-fx-background-color: transparent;" text="_" textFill="#1c1c1d">
