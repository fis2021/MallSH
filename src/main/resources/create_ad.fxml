            <Font name="Times New Roman" size="14.0" />
         </font>
      </TextField>
      <Text fx:id="AddAdMessage" fill="#ff0000a8" layoutX="132.0" layoutY="402.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="313.0" />
      <TextField fx:id="vusernameField" layoutX="156.0" layoutY="352.0" prefHeight="28.0" prefWidth="240.0" promptText="*Verified Username" style="-fx-background-color: transparent; -fx-border-color: #2F4F4F; -fx-border-width: 0px 0px 2px 0px;">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font>
      </TextField>
      <TextField editable="false" layoutX="165.0" layoutY="325.0" mouseTransparent="true" prefHeight="27.0" prefWidth="249.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 0px 0px;" text="Enter your username for validation:">
         <font>
            <Font name="Calibri Bold" size="13.0" />
         </font>
      </TextField>
